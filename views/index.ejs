<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <title>Document</title>
  <style>
    ul{
      list-style: none;
    }
    li{
      float: left;
      text-align: center;
    }
    h3{
      margin-top: 0;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">相册</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">所有相册</a></li>
          <li><a href="/pic/toUpload">上传图片</a></li>
          <li><a href="/dir/toCreate">新建相册</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <ul>
    <% for(var i=0;i<dirs.length;i++){ %>
    <li>
      <a href="/pic/show?dirName=<%= dirs[i] %>">
        <img src="/images/dir.jpg" width="100px">
        <h3><%= dirs[i] %></h3>
      </a>
      <a href="/dir/delete/<%= dirs[i] %>">删除</a>
    </li>
    <% } %>
  </ul>
</body>
</html>